    <tr>
      <th>あそび</th>
      <th>日付</th>
      <th>開始</th>
      <th>終了</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.hang_outs.each do |hang_out| %>
      <tr>
        <td><%= link_to "#{hang_out.name}", "http://localhost:3000/hang_outs/#{hang_out.id}" %></td>
        <td><%= hang_out.date %></td>
        <td><%= hang_out.start_time %></td>
        <td><%= hang_out.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
