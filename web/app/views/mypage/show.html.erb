<div class=pad70>
<h1>ようこそ<%= current_user.name %>さん</h1>
<br>
<h2>プロフィール</h2>
<table class="table table-striped">
  <tr><th>名前</th><td><%= current_user.name %></td></tr>
  <tr><th>年齢</th><td><%= current_user.age %></td></tr>
  <tr><th>フォロー</th><td><%= link_to "#{current_user.followings.count}", "http://localhost:3000/user/#{current_user.id}/follow" %></td></tr>
  <tr><th>フォロワー</th><td><%= link_to "#{current_user.followers.count}", "http://localhost:3000/user/#{current_user.id}/follower" %></td></tr>
</table>
<br>
<br>
<h2><%= current_user.name %>の遊びの予定</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>あそび</th>
      <th>日付</th>
      <th>開始</th>
      <th>終了</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.hang_outs.each do |hang_out| %>
      <tr>
        <td><%= link_to "#{hang_out.name}", "http://localhost:3000/hang_outs/#{hang_out.id}" %></td>
        <td><%= hang_out.date %></td>
        <td><%= hang_out.start_time %></td>
        <td><%= hang_out.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "あそびを追加する", new_hang_out_path, { class: 'btn btn-outline-primary w-25' }  %>
<br>
<br>
<br>
<h2><%= current_user.name %>のいいねしたあそび</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>あそび</th>
      <th>日付</th>
      <th>開始</th>
      <th>終了</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.likes.each do |like| %>
      <tr>
        <td><%= like.hang_out.name %></td>
        <td><%= like.hang_out.date %></td>
        <td><%= like.hang_out.start_time %></td>
        <td><%= like.hang_out.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
